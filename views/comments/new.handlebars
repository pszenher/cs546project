<!-- comments/new.handlebars -->
<!-- For adding new comment to the database -->

<article class="new-comment">
  <h1>Make a Comment</h1>
  <form action="/comments" method="POST" class="new-comment-form">

    <p id="song">Leave comment on {{song.title}}</p>

    <!-- I assume we'll get the userId for the POST request by seeing which user is logged in, but this is for testing -->
    
    
    <label for="comment-content">
      Comment Content
    </label>
    <textarea id="comment-content" name="content" rows="4" placeholder="Comment Content" class="full-width-input"></textarea>

    <button type="submit" onsubmit="async newUserCreated()">Create New Post</button>
    <button type="reset">Clear Form</button>
    <button type="button">Click me!</button>
  </form>
  <!-- implement error list later
  {{#if hasErrors}}
  <ul class="error-list">
    {{#each errors}}
    <li>
      {{this}}
    </li>
    {{/each}}
  </ul>
  {{/if}}
  -->
</article>