<!-- users/index.handlebars -->
<!-- Representation of list of entire database of users -->

<section>
    <h2>Users</h2>
    {{#each users}}
    <article class="user">
        <div class="user">
            <h3 class="user-title">{{firstName}} {{lastName}}</h3> <!-- how to get author name -->
            <ul class="user-info">
                <li>Id: {{_id}}</li>
                <li>Email: {{email}}</li>
                <li>Password: {{password}}</li>
                <li>Gender: {{gender}}</li>
                <li>City: {{city}}</li>
                <li>State: {{state}}</li>
                <li>Age: {{age}}</li>
                <li>Interests: {{interested}}</li>
                <li>Biography: {{bio}}</li>
            </ul>
        </div>
        {{/each}}
    </article>
</section>